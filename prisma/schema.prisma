// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model CurrentBooks {
  id        Int     @id @default(autoincrement())
  title     String
  author    String
  cover     String?
}

model ReadBooks {
  id        Int     @id @default(autoincrement())
  title     String
  author    String
  cover     String?
  dateRead String?
  rating    Int
}

model TbrBooks {
  id        Int     @id @default(autoincrement())
  title     String
  author    String
  cover     String?
}
